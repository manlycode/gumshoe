GREEN="\033[0;32m"
RED="\033[0;31m"
NONE="\033[0m"

run() {
  go test -v $@
}

if [[ "$1" == "" ]]; then
    run ./trackerapi \
        ./trackerapi/domain \
        ./trackerapi/presenters \
        ./trackerapi/responses \
        ./trackerapi/request \
        ./trackerapi/store \
        ./term
else
    run $1
fi

if [[ $? = 0 ]]; then
    STATE="${GREEN}ALL GOOD BASSI!${NONE}"
else
    STATE="${RED}NO GOOD BASSI!${NONE}"
fi

echo
echo -e $STATE
